    <menuitem name="VIDEOCLUB" id="videoclub_sge.menu_root"/>

    <!-- menu categories -->
    <menuitem name="Gestión Pelis" id="videoclub_sge.gestion_pelis" parent="videoclub_sge.menu_root" /> 
    <menuitem name="Pelis" id="videoclub_sge.menu_pelis" parent="videoclub_sge.gestion_pelis" action="videoclub_sge.pelis_ventana" />  

